
<body>
  @if(@Model.Count == 0)
  {
    <p>No clients have been added yet!</p>
  }
  else
  {
      <h1>Here is list of clients:</h1>
      <ul>
        @foreach(var client in Model)
        {
          <p>@client.GetName()</p>
          <ul>
            <li>@client.GetAppointmentDate()</li>
            <li>@client.GetNote()</li>
          </ul>
        }
      </ul>
      <form action="/clients/delete" method="post">
        <button type="submit">Delete all clients</button>
      </form>
  }
  <h4><a href="/client/new">Add a new client</a></h4>
  <h4><a href="/">Back to main</a></h4>
</body>


<body>
  <h1>Stylists:</h1>
  <hr />

  @if(@Model.Count == 0)
  {
    <p>There are no Stylists.</p>
  }
  else
  {
    <ul>
      @foreach(var stylist in Model)
      {
        <li><a href="/stylist/@stylist.GetId()">@stylist.GetName()</a> | <a href="/stylist/edit/@stylist.GetId()">Edit</a> | <a href="/stylist/delete/@stylist.GetId()">Delete</a></li>
      }
    </ul>
    <form action="/stylists/delete" method="post">
      <button type="submit">Delete all stylists</button>
    </form>
  }
  <h4><a href="/stylist/new">Add a new stylist</a></h4>
  <h4><a href="/client/search">Search client</a><h4>
  <h4><a href="/clients">View client</a><h4>
</body>
